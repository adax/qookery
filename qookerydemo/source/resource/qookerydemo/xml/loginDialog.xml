<?xml version="1.0" encoding="utf-8"?>
<!-- 
	A simple login dialog in Qookery
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1">

	<!-- Form fields -->

	<composite column-count="2" column-flexes="0 1"> 
		<text-field id="username" label="User name" required="true" />
		<password-field id="password" label="Password" required="true" />
	</composite>

	<!-- Buttons -->

	<composite column-count="auto" max-width="300" alignment-x="right" column-flexes="1 1">
		<button label="Login">
			<script event="execute">
				if(!$.form.validate()) return;
				var username = $("#username").getValue();
				var password = $("#password").getValue();
				alert("Login would have succeeded... probably");
			</script>
		</button>
		<button label="Cancel">
			<script event="execute">
				$.form.dispose();
			</script>
		</button>
	</composite>

	<script event="formOpen">
		$("#username").focus();
	</script>

</form>
