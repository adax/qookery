<?xml version="1.0" encoding="utf-8"?>
<!-- 
	A simple login dialog in Qookery
-->
<form xmlns="http://www.qookery.org/ns/Form">

	<!-- Form fields -->

	<composite column-count="2"> 
		<text-field id="username" label="User name">
			<script>
				this.setRequired(true);
			</script>
		</text-field>
		<text-field id="password" label="Password">
			<script>
				this.setRequired(true);
			</script>
		</text-field>
	</composite>

	<!-- Buttons -->

	<composite column-count="auto">
		<button label="Login">
			<script event="execute">
				if(!$.form.validate()) return;
				var username = $("#username").getValue();
				var password = $("#password").getValue();
				alert("Login would have succeeded... probably");
			</script>
		</button>
		<button label="Cancel">
			<script event="execute">
				$.form.dispose();
			</script>
		</button>
	</composite>

	<script event="formOpen">
		$("#username").focus();
	</script>

</form>
