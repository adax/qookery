<?xml version="1.0" encoding="utf-8"?>
<!-- 
	A simple login dialog in Qookery
-->
<form xmlns="http://www.qookery.org/ns/Form">

	<!-- Form fields -->

	<layout grab-horizontal="true" num-of-columns="2"> 
		<element id="username" type="text" label="User name">
			<script>
				this.setRequired(true);
			</script>
		</element>
		<element id="password" type="password" label="Password">
			<script>
				this.setRequired(true);
			</script>
		</element>
	</layout>

	<!-- Buttons -->

	<layout grab-horizontal="true" num-of-columns="2">
		<element type="button" label="Login">
			<script event="execute">
				if(!$.form.validate()) return;
				var username = $("#username").getValue();
				var password = $("#password").getValue();
				alert("Login would have succeeded... probably");
			</script>
		</element>
		<element type="button" label="Cancel">
			<script event="execute">
				$.form.dispose();
			</script>
		</element>
	</layout>

	<script event="formOpen">
		$("#username").focus();
	</script>

</form>
