<?xml version="1.0" encoding="utf-8"?>
<!-- 
	A master-details form
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1">

	<composite column-count="3" column-flexes="0 1 0">
		<table id="passwordsTable" connect="passwords">
			<script>
				this.initialize({
					columns: [
						{ connect: "password", label: "Password" },
						{ connect: "username", label: "Username", sortable: false, editable: true,  }
					]
				});
			</script>
			<script>
				this.addListener("changeSelection", function(event) {
					var data = event.getData();
					$("#subForm").setModel(data);
				})
			</script>
		</table>
	</composite>
	
	<form id="subForm" column-flexes="1">
		<composite column-count="2" column-flexes="0 1">
			<text-field read-only="true" label="Username" connect="username"/>
			<text-field read-only="true" label="Password" connect="password"/>
		</composite>
	</form>

</form>
