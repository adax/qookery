<?xml version="1.0" encoding="utf-8"?>
<!-- 
	A form with a variety of components, some of them 
	connected to shared model properties.
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1">
	
	<script>
		$.brands = {
			"audi": "Audi",
			"bmw": "BMW",
			"vw": "VW",
			"opel": "Opel"
		};
		
		$.loan = {
			"minimum": 0,
			"maximum": 100,
			"singleStep": 1,
			"pageStep": 5
		};
	</script>
	
	<tab-view column-flexes="1">
		<tab-view-page label="Car Brand" column-flexes="1">
			<group-box column-count="2" column-flexes="0 1">
				<text-field connect="brand" />
				<select-box connect="brand">
					<script>
						this.initialize({
							items: $.brands
						});
					</script>
				</select-box>
				<radio-button-group connect="brand">
					<script>
						this.initialize({
							items: $.brands
						});
					</script>
				</radio-button-group>
				<list connect="brand">
					<script>
						this.initialize({
							items: $.brands
						});
					</script>
				</list>
			</group-box>
		</tab-view-page>
		<tab-view-page label="Options" column-count="2" column-flexes="0 1">
			<date-field label="Delivery Date" connect="date" format="date: format = dd/MM/yyyy HH:mm:ss" />
			<check-box label="Pearl Paint" connect="pearl" />
			<group-box label="Loan Percent" column-span="2" column-count="2" column-flexes="0 1">
				<slider connect="loan">
					<script>
						this.initialize($.loan);
					</script>
				</slider>
				<spinner connect="loan">
					<script>
						this.initialize($.loan);
					</script>
				</spinner>
			</group-box>
		</tab-view-page>
		<tab-view-page label="Photo" column-flexes="1">
			<image source="resource/qookerydemo/images/ascona.jpg" />
		</tab-view-page>
	</tab-view>
	
</form>
