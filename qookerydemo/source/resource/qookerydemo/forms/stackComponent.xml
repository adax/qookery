<?xml version="1.0" encoding="utf-8"?>
<!--
	A "Hello World" example for Qookery. It presents a button to the
	user which opens an alert when clicked.
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1">

	<stack id="stack">
		<composite id="page1" column-flexes="1">
			<label label="Fisrst Page"/>
			<composite column-count="auto" alignment-x="right" max-width="115">
				<button label="Go to second page">
					<script event="execute">
						$("#stack").setSelection($("#page2"));
					</script>
				</button>
			</composite>
		</composite>
		<composite id="page2" column-flexes="1">
			<label label="Second Page"/>
			<button label="Go to third Page">
				<script event="execute">
					$("#stack").setSelection($("#page3"));
				</script>
			</button>
		</composite>
		<composite id="page3">
			<label label="Third Page"/>
			<button label="Go to first Page">
				<script event="execute">
					$("#stack").setSelection($("#page1"));
				</script>
			</button>
		</composite>
	</stack>
</form>
