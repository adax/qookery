<?xml version="1.0" encoding="utf-8"?>
<!--
	XInclude example
-->
<form xmlns="http://www.qookery.org/ns/Form" xmlns:xi="http://www.w3.org/2001/XInclude" column-flexes="1">

	<import class="qookerydemo.contexts.QookeryDemo" />

	<group-box label="'Layouts' demo" legend-position="top">
		<xi:include href="qookerydemo/forms/layouts.xml" />
	</group-box>

	<group-box label="'Login Dialog' demo, with setup script" legend-position="top">
		<xi:include xml:id="dialog" href="qookerydemo/forms/loginDialog.xml" />
		<script>
			$("#dialog").setModel($.QookeryDemo.createModel({
				username: 'admin',
				password: '1234'
			}));
		</script>
	</group-box>

</form>
