<?xml version="1.0" encoding="utf-8"?>
<!--
	A simple login dialog in Qookery
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1" spacing="10">

	<!-- Form fields -->

	<composite column-count="2" column-flexes="0 1" spacing="5">
		<text-field id="username" label="User name" required="true" connect="username" />
		<password-field id="password" label="Password" required="true" connect="password" />
	</composite>

	<!-- Buttons -->

	<composite column-count="auto" max-width="100" align-x="right" column-flexes="1">
		<button id="loginButton" label="Login">
			<script event="execute">
				if($.form.validate()) return;
				var username = $("#username").getValue();
				var password = $("#password").getValue();
				alert("Thank you " + username + ", your password has been safely stored in plaintext on a floppy disk.");
			</script>
		</button>
	</composite>

	<script event="appear">
		$("#username").focus();
	</script>

</form>
