<?xml version="1.0" encoding="utf-8"?>
<!-- 
	A simple login dialog in Qookery
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1">

	<!-- Form fields -->

	<composite column-count="2" column-flexes="0 1"> 
		<text-field id="username" label="User name" required="true" connect="username" />
		<password-field id="password" label="Password" required="true" connect="password" />
	</composite>

	<!-- Buttons -->

	<composite column-count="auto" max-width="300" alignment-x="right" column-flexes="1 1">
		<button label="OK">
			<script event="execute">
				if(!$.form.validate()) return;
				var username = $("#username").getValue();
				var password = $("#password").getValue();
				$.form.close("OK");
			</script>
		</button>
		<button label="Cancel">
			<script event="execute">
				$.form.close("Cancel");
			</script>
		</button>
	</composite>

	<script event="appear">
		$("#username").focus();
	</script>

</form>
