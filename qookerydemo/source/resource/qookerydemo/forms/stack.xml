<?xml version="1.0" encoding="utf-8"?>
<!--
	Stack example
-->
<form xmlns="http://www.qookery.org/ns/Form" column-flexes="1">

	<composite column-count="auto">
		<button label="Page 1">
			<script event="execute">
				$("#stack").setSelection($("#page1"));
			</script>
		</button>
		<button label="Page 2">
			<script event="execute">
				$("#stack").setSelection($("#page2"));
			</script>
		</button>
		<button label="Page 3">
			<script event="execute">
				$("#stack").setSelection($("#page3"));
			</script>
		</button>
	</composite>

	<stack id="stack" decorator="group" height="100">
		<composite id="page1">
			<label label="First Page" text-color="red" />
		</composite>
		<composite id="page2">
			<label label="Second Page" text-color="blue" />
		</composite>
		<composite id="page3">
			<label label="Third Page" text-color="green" />
		</composite>
	</stack>

</form>
