{
	"name": "qookerydemo",
	"include": [
		{ "path" : "${QOOXDOO_PATH}/tool/data/config/application.json" }
	],
	"export": [
		"api",
		"api-data",
		"build",
		"clean",
		"distclean",
		"fix",
		"info",
		"inspector",
		"lint",
		"migration",
		"pretty",
		"profiling",
		"source",
		"source-all",
		"source-hybrid",		
		"simulation-build",
		"simulation-run",
		"test",
		"test-source",
		"translation"
	],
	"default-job": "source-hybrid",
	"let": {
		"APPLICATION": "qookerydemo",
		"QOOXDOO_PATH": "../../qooxdoo",
		"QXTHEME": "qookerydemo.Theme",
		"API_EXCLUDE": ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
		"LOCALES": [ "en" ],
		"CACHE": "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
		"ROOT": "."
	},
	"jobs": {
		"libraries": {
			"library": [
				{ "manifest" : "../org.qookery/Manifest.json" }
			]
		},
		"includes": {
			"include": [
				"${APPLICATION_MAIN_CLASS}",
				"${QXTHEME}",
				"qookery.*",
				"qookerydemo.*"
			]
		}
	}
}
