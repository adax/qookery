{
	"name": "qookery",
	"include": [
		{ "path" : "${QOOXDOO_PATH}/tool/data/config/application.json" }
	],
	"export": [
		"api",
		"api-data",
		"lint",
		"validate-manifest"
	],
	"config-warnings": {
		"job-shadowing": [ "lint" ]
	},
	"default-job": "api",
	"let": {
		"CACHE": "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
		"API_INCLUDE": [
			"qookery.*"
		],
		"API_EXCLUDE": [
			"qookery.internal.*", "qx.*"
		]
	},
	"jobs": {
		"lint": {
			"lint-check": {
				"ignore-no-loop-block": true
			}
		}
	}
}
